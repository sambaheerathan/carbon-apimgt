{{#unless @params.subscriptionsAvailable}}
    <div id="subscription-table-nodata" class="message message-info ">
        <h4><i class="icon fw fw-info"></i>No Subscriptions</h4>
        <p>{{i18n "This application has not yet been subscribed to an API. To subscribe, select an API from"}} <a
                href="{{@contextPath}}/apis"> {{i18n "API List Page"}} </a>
        </p>

    </div>
{{/unless}}

{{#if @params.subscriptionsAvailable}}
    <div id="subscription-table-wrap">
        <table id="subscription-table" class="table table-striped table-hover table-bordered display data-table"
               cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>{{i18n "API Name"}}</th>
                <th>{{i18n "Subscription Tier"}}</th>
                <th>{{i18n "Status"}}</th>
                <th class="subscription-listing-action">{{i18n "Actions"}}</th>
            </tr>
            </thead>
        </table>
    </div>
{{/if}}